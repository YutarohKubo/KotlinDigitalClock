<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/date_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/layout_now_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frame_now_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_now_day_background"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88"
                    android:textColor="@color/sumi"
                    android:textSize="@dimen/text_size_date" />

                <TextView
                    android:id="@+id/text_now_day"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/vert_prairie"
                    android:textSize="@dimen/text_size_date" />

            </FrameLayout>

            <TextView
                android:id="@+id/text_title_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_now_day"
                android:layout_centerInParent="true"
                android:text="DAY"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/snow_white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_now_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/layout_now_day">

            <FrameLayout
                android:id="@+id/frame_now_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_now_month_background"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88"
                    android:textColor="@color/sumi"
                    android:textSize="@dimen/text_size_date" />

                <TextView
                    android:id="@+id/text_now_month"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/vert_prairie"
                    android:textSize="@dimen/text_size_date" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_now_month"
                android:layout_centerInParent="true"
                android:text="MONTH"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/snow_white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_now_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/layout_now_month">

            <FrameLayout
                android:id="@+id/frame_now_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_now_year_background"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8888"
                    android:textColor="@color/sumi"
                    android:textSize="@dimen/text_size_date" />

                <TextView
                    android:id="@+id/text_now_year"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/vert_prairie"
                    android:textSize="@dimen/text_size_date" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_now_year"
                android:layout_centerInParent="true"
                android:text="YEAR"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/snow_white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_now_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_now_year"
            android:layout_alignBottom="@+id/layout_now_year"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/text_now_week"
                android:fontFamily="@font/ksblockblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/vert_prairie"
                android:textSize="@dimen/text_size_week" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_now_week"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:text="a"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/black" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/time_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/layout_now_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frame_now_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_now_hour_background"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88"
                    android:textColor="@color/sumi"
                    android:textSize="@dimen/text_size_hour_and_minute" />

                <TextView
                    android:id="@+id/text_now_hour"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/vert_prairie"
                    android:textSize="@dimen/text_size_hour_and_minute" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_now_hour"
                android:layout_centerInParent="true"
                android:text="HOUR"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/snow_white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_divide_hour_and_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_now_hour">

            <TextView
                android:id="@+id/text_divide_hour_and_minute"
                android:fontFamily="@font/barspbd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text=":"
                android:textColor="@color/vert_prairie"
                android:textSize="@dimen/text_size_hour_and_minute" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_divide_hour_and_minute"
                android:layout_centerInParent="true"
                android:text="a"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/black"
                android:visibility="invisible"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_now_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_divide_hour_and_minute">

            <FrameLayout
                android:id="@+id/frame_now_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_now_minute_background"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88"
                    android:textColor="@color/sumi"
                    android:textSize="@dimen/text_size_hour_and_minute" />

                <TextView
                    android:id="@+id/text_now_minute"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/vert_prairie"
                    android:textSize="@dimen/text_size_hour_and_minute" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_now_minute"
                android:layout_centerInParent="true"
                android:text="MINUTE"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/snow_white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_now_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout_now_hour"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/layout_now_minute">

            <FrameLayout
                android:id="@+id/frame_now_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_now_second_background"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88"
                    android:textColor="@color/sumi"
                    android:textSize="@dimen/text_size_second" />

                <TextView
                    android:id="@+id/text_now_second"
                    android:fontFamily="@font/barspbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/vert_prairie"
                    android:textSize="@dimen/text_size_second" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_now_second"
                android:layout_centerInParent="true"
                android:text="SECOND"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/snow_white" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_alarm_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/image_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_alarm_normal"/>

        <FrameLayout
            android:id="@+id/frame_top_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_alarm"
            android:layout_alignBottom="@id/image_alarm">

            <TextView
                android:id="@+id/text_top_alarm_time_background"
                android:fontFamily="@font/barspbd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88:88"
                android:textColor="@color/sumi"
                android:textSize="@dimen/text_size_alarm_time" />

            <TextView
                android:id="@+id/text_top_alarm_time"
                android:fontFamily="@font/barspbd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/vert_prairie"
                android:textSize="@dimen/text_size_alarm_time" />

        </FrameLayout>

        <Button
            android:id="@+id/start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/frame_top_alarm_time"
            android:text="start" />

        <Button
            android:id="@+id/stop_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/start_service"
            android:text="stop" />

    </RelativeLayout>

</LinearLayout>